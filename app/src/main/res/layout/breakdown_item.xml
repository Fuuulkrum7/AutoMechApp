<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_on_background_disabled"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/breakdown_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_no_photography_24" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/breakdown_image">

            <TextView
                android:id="@+id/name_of_breakdown"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/lato_regular_family"
                android:gravity="left|center_vertical"
                android:textSize="34sp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/manufacturer_breakdown"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:fontFamily="@font/lato_regular_family"
                android:gravity="left|center_vertical"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/model_breakdown"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:fontFamily="@font/lato_regular_family" />

            <TextView
                android:id="@+id/date_of_breakdown"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:fontFamily="@font/lato_regular_family" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_on_background_disabled"/>

</LinearLayout>